<center><div id="signin_page" style="width:0 auto">
<% if current_user %>
<h2><%= current_user.username %> is signed in.</h2>
<br>
<%= link_to "Sign Out", signout_path %>
<% else %>
<h2>Sign In</h2>


<%= form_for(:session, :url => sessions_path) do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email, :autofocus => true %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.button "Sign in", class: "btn btn-large btn-primary" %>
<% end %>
<br>
<div id="social_media_auth">
  <a href="/auth/facebook"><img src="/assets/facebook.png", height="45" width="270"></a> 
</div>
<br>
<p><%= link_to "Sign up", signup_path %></p>
<% end %>
</div></center>
